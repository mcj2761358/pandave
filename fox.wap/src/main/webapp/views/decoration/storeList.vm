<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>商品管理</title>
    #parse("decoration/public/commonStyle.vm")

    <link rel="stylesheet" href="${rc.contextPath}/resources/css/lib/simplePagination.css"/>
    <link rel="stylesheet" href="${rc.contextPath}/resources/css/view/decoration/storeList.css?v=1.00"/>
    <link rel="stylesheet" href="${rc.contextPath}/resources/css/lib/bootstrap-datetimepicker.min.css"/>
    <link rel="stylesheet" href="${rc.contextPath}/resources/css/lib/bootstrap-select.min.css"/>


    <script type="text/javascript" src="${rc.contextPath}/resources/js/lib/bootstrap-datetimepicker.min.js"></script>
    <script type="text/javascript" src="${rc.contextPath}/resources/js/lib/bootstrap-datetimepicker.zh-CN.js"></script>
    <script type="text/javascript" src="${rc.contextPath}/resources/js/lib/jquery.simplePagination.js"></script>
    <script type="text/javascript" src="${rc.contextPath}/resources/js/lib/bootstrap-select.min.js"></script>
    <script type="text/javascript" src="${rc.contextPath}/resources/js/lib/bootstrap-select-defaults-zh_CN.min.js"></script>
    <script type="text/javascript" src="${rc.contextPath}/resources/js/view/decoration/storeList.js?v=1.06"></script>


</head>

<body>
    #parse("decoration/public/topBar.vm")
<div class="ch-container">
    <div class="row">

    ##引入左边菜单栏
        #parse("decoration/public/leftMenu.vm")

        <div id="content" class="col-lg-10 col-sm-10">
            <div>
                <ul class="breadcrumb">
                    <li>
                        <a href="#">超级管理员</a>
                    </li>
                    <li>
                        <a href="#"> 商户</a>
                    </li>
                </ul>
            </div>

            <div class="row">
                <div class="box col-md-12">
                    <div class="box-inner">
                        <div class="box-header well order-header" data-original-title="">
                            <h2>
                                <i class="glyphicon glyphicon-user"></i> 商户列表
                            </h2>


                            <h2 class="modal-title float-right">
                                <a class="btn btn-success btn-sm" id="storeModalBtn">
                                    <i class="glyphicon glyphicon-edit icon-white"></i>新建商户
                                </a>
                            </h2>
                        </div>

                        <div class="box-content">

                            <!-- 搜索框 -->
                            <div class="form-horizontal">
                                <div class="form-group col-md-12 has-success">
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" id="keyword" placeholder="商户名称/商户手机号">
                                    </div>
                                    <button class="btn btn-success" onclick="queryStoreList(0);" id="searchStoreBtn">
                                        搜索商户
                                    </button>
                                </div>
                            </div>

                            <table class="table table-striped table-bordered">
                                <thead>
                                <tr>
                                    <th>商户名称</th>
                                    <th>签约日期</th>
                                    <th>商户手机</th>
                                    <th>商户套餐</th>
                                    <th>到期时间</th>
                                    <th>备注</th>
                                    <th></th>
                                </tr>
                                </thead>
                                <tbody class="contentDiv">
                                ##customer data from db
                                </tbody>
                            </table>

                            <div align="center">
                                <ul class="pagination self-page"></ul>
                            </div>
                        </div>
                    </div>
                </div>
                <!--/span-->

            </div>
        </div>
    </div>

    #parse("decoration/public/footer.vm")
</div>


<div class="modal fade" id="storeModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    &times;
                </button>
                <h4 class="modal-title">
                    商户信息:
                </h4>
            </div>
            <div class="modal-body" style="color: #666666;">

                <div class="row">
                    <div class="form-horizontal">
                        <!-- 客户ID -->
                        <input type="hidden" id="editStoreId"/>

                        <div class="form-group col-md-12 has-success">
                            <label class="col-sm-3 control-label">商户名称</label>

                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="editStoreName">
                            </div>
                            <label class="red control-label">*</label>
                        </div>
                        <div class="form-group col-md-12 has-success">
                            <label class="col-sm-3 control-label">商户手机</label>

                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="editMobilePhone">
                            </div>
                            <label class="red control-label">*</label>
                        </div>

                        <div class="form-group col-md-12 has-success">
                            <label class="col-sm-3 control-label">商户套餐</label>

                            <div class="col-sm-8">
                                <select class="form-control" id="editStoreLevel">
                                    <option value="" selected="selected"></option>
                                    <option value="Free">体验版</option>
                                    <option value="Base">家庭版</option>
                                    <option value="Star">钻石版</option>
                                    <option value="Biu">至尊版</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group col-md-12 has-success">
                            <label class="col-sm-3 control-label">到期时间</label>

                            <div class="col-sm-8">

                                <div class="input-group date endTimeCon" data-date-format="yyyy-mm-dd"
                                     data-link-field="dp">
                                    <input class="form-control" id="editEndTime" size="16" type="text" value="" readonly>
                                    <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span>
                                    <span class="input-group-addon"><span class="glyphicon glyphicon-th"></span></span>
                                </div>

                            </div>
                        </div>
                        <div class="form-group col-md-12 has-success">
                            <label class="col-sm-3 control-label">备 注</label>

                            <div class="col-sm-8">
                                <input class="form-control" id="editRemark">
                            </div>
                        </div>


                        <div class="form-group col-md-12 has-success">
                            <label class="col-sm-3 control-label">授权权限</label>

                            <div class="col-sm-8">
                                <select id="editPermissionRole" name="rolePermission" class="selectpicker show-tick form-control" multiple data-live-search="false">
                                    <option value="noInPrice">无权查看进价</option>
                                    <option value="noCharts">无权查看报表</option>
                                    <option value="noGoodsList">无权查看商品</option>
                                    <option value="admin">查看商户列表</option>
                                </select>
                            </div>
                        </div>

                        <div align="center">
                            <button type="button" class="btn btn-danger btn-sm" id="saveStoreBtn"> 保存商品</button>
                            <button type="button" class="btn btn-default btn-sm" data-dismiss="modal"> 取 消</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


    #parse("decoration/public/alertModal.vm")
    #parse("decoration/public/commonJS.vm")
</body>
</html>
