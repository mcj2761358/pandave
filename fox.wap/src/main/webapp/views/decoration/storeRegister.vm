<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>商户体验信息提交页面</title>
    #parse("decoration/public/commonStyle.vm")
    <script type="text/javascript" src="${rc.contextPath}/resources/js/view/decoration/storeRegister.js?v=1.01"></script>

</head>

<body>
<div class="ch-container">
    <div class="row">
        
    <div class="row">
        <div class="col-md-12 center login-header">
            <h2>欢迎体验飞天系统</h2>
        </div>
    </div>

    <div class="row">
        <div class="well col-md-5 center login-box">
            <div class="alert alert-info">
                请输入您的信息开始系统使用功能
            </div>
            <form class="form-horizontal" method="post">
                <fieldset>

                    <div class="form-group col-md-12 has-success">
                        <label class="col-sm-3 control-label">店铺名称</label>

                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="storeName"  placeholder="店铺名称">
                        </div>
                        <label class="red control-label">*</label>
                    </div>
                    <div class="form-group col-md-12 has-success">
                        <label class="col-sm-3 control-label">手机号码</label>

                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="mobilePhone"  placeholder="手机号码">
                        </div>
                        <label class="red control-label">*</label>
                    </div>

                    <div class="form-group col-md-12 has-success">
                        <label class="col-sm-3 control-label">登录密码</label>

                        <div class="col-sm-8">
                            <input type="password" id="password" class="form-control" placeholder="登录密码">
                        </div>
                        <label class="red control-label">*</label>
                    </div>

                    <div align="center">
                        <button type="button" style="width: 100px;" id="registerBtn"  class="btn btn-primary">开始体验</button>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>

</div>
    #parse("decoration/public/alertModal.vm")
    #parse("decoration/public/commonJS.vm")
</body>
</html>
