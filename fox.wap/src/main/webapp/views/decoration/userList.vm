<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>客户管理</title>
    #parse("decoration/public/commonStyle.vm")

    <link rel="stylesheet" href="${rc.contextPath}/resources/css/lib/simplePagination.css"/>
    <link rel="stylesheet" href="${rc.contextPath}/resources/css/view/decoration/userList.css"/>
    <script type="text/javascript" src="${rc.contextPath}/resources/js/lib/jquery.simplePagination.js"></script>
    <script type="text/javascript" src="${rc.contextPath}/resources/js/view/decoration/userList.js?v=1.4"></script>
</head>

<body>
    #parse("decoration/public/topBar.vm")
<div class="ch-container">
    <div class="row">

    ##引入左边菜单栏
        #parse("decoration/public/leftMenu.vm")

        <div id="content" class="col-lg-10 col-sm-10">
            <div>
                <ul class="breadcrumb">
                    <li>
                        <a href="#">管理中心</a>
                    </li>
                    <li>
                        <a href="#"> 客户管理</a>
                    </li>
                </ul>
            </div>


            <!-- 快速创建客户 -->
            <div class="row">
                <div class="box col-md-12">
                    <div class="box-inner">
                        <div class="box-header well" data-original-title="">
                            <h2><i></i> 新建客户</h2>
                        </div>
                        <div class="box-content">
                            <table class="table table-striped table-bordered quick_order_0">
                                <thead>
                                <tr>
                                    <th>客户姓名<span style="color: red">*</span></th>
                                    <th>手机号码<span style="color: red">*</span></th>
                                    <th>小区名称<span style="color: red">*</span></th>
                                    <th>详细地址</th>
                                    <th>操作</th>
                                </tr>
                                </thead>
                                <tbody class="customerCreateDiv">
                                <tr>
                                    <td><input id="cusName"/></td>
                                    <td><input id="mobilePhone"/></td>
                                    <td><input id="houseName"/></td>
                                    <td><input id="address"/></td>

                                    <td class="center">
                                        <a class="btn btn-info btn-sm" onclick="simpleCreateCustomer()">
                                            <i class="glyphicon glyphicon-edit icon-white"></i>新建客户
                                        </a>
                                        <a class="btn btn-danger btn-sm" onclick="clearCustomerInfo()">
                                            <i class="glyphicon glyphicon-plane icon-white"></i>清空数据
                                        </a>
                                    </td>
                                </tr>
                                </tbody>
                            </table>

                        </div>

                    </div>
                </div>
            </div>

            <div class="row">
                <div class="box col-md-12">
                    <div class="box-inner">
                        <div class="box-header well order-header" data-original-title="">
                            <h2>
                                <i class="glyphicon glyphicon-user"></i> 客户列表
                            </h2>
                        </div>

                        <div class="box-content">

                            <!-- 搜索框 -->
                            <div class="form-horizontal">
                                <div class="form-group col-md-12 has-success">
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" id="keyword" placeholder="客户名称/手机号码/小区名称">
                                    </div>
                                    <button class="btn btn-success" onclick="queryUserList(0);" id="searchCustomerBtn">搜索客户</button>

                                </div>
                            </div>

                            <table class="table table-striped table-bordered">
                                <thead>
                                <tr>
                                    <th>用户名</th>
                                    <th>手机号</th>
                                    <th>小区名称</th>
                                    <th>详细地址</th>
                                    <th>备注</th>
                                    <th></th>
                                </tr>
                                </thead>
                                <tbody class="contentDiv">
                                ##customer data from db
                                </tbody>
                            </table>

                            <div align="center">
                                <ul class="pagination self-page"></ul>
                            </div>
                        </div>
                    </div>
                </div>
                <!--/span-->

            </div>
        </div>
    </div>

    #parse("decoration/public/footer.vm")
</div>
    #parse("decoration/public/alertModal.vm")
    #parse("decoration/public/commonJS.vm")
</body>
</html>
