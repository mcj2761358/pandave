<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8">
    <title>每日概览</title>
    #parse("decoration/public/commonStyle.vm")

    <link rel="stylesheet" href="${rc.contextPath}/resources/css/view/decoration/dashboard.css?v=1.0"/>
    <script type="text/javascript" src="${rc.contextPath}/resources/js/view/decoration/dashboard.js?v=1.0"></script>
</head>

<body>

    #parse("decoration/public/topBar.vm")

<div class="ch-container">
    <div class="row">

    ##引入左边菜单栏
        #parse("decoration/public/leftMenu.vm")

        <div id="content" class="col-lg-10 col-sm-10">
            <!-- content starts -->
            <div>
                <ul class="breadcrumb">
                    <li>
                        <a href="#">实验室</a>
                    </li>
                    <li>
                        <a href="#">每日概览</a>
                    </li>
                </ul>
            </div>

            <!-- 仪表盘 -->
            <div class=" row">
                <!-- 今日待处理订单 -->
                <div class="col-md-3 col-sm-3 col-xs-6">
                    <a data-toggle="tooltip" title="" class="well top-block" href="#">
                        <i class="glyphicon glyphicon-bell red"></i>

                        <div>今日待处理订单数</div>
                        <div>$!remindOrderNum</div>
##                        <span class="notification">6</span>
                    </a>
                </div>

                <div class="col-md-3 col-sm-3 col-xs-6">
                    <a data-toggle="tooltip" title="" class="well top-block" href="#">
                        <i class="glyphicon glyphicon-star green"></i>

                        <div>今日订单总金额 </div>
                        <div>￥&nbsp;&nbsp;$!totalOrderAmount&nbsp;&nbsp;元</div>
                    ##                        <span class="notification green">4</span>
                    </a>
                </div>


                <div class="col-md-3 col-sm-3 col-xs-6">
                    <a data-toggle="tooltip" title="" class="well top-block" href="#">
                        <i class="glyphicon glyphicon-flag blue"></i>

                        <div>今日毛利润</div>
                        <div>￥&nbsp;&nbsp;$!profitOrderAmount&nbsp;&nbsp;元</div>
                    ##                        <span class="notification red">12</span>
                    </a>
                </div>

                <div class="col-md-3 col-sm-3 col-xs-6">
                    <a data-toggle="tooltip" title="" class="well top-block" href="#">
                        <i class="glyphicon glyphicon-shopping-cart yellow"></i>

                        <div>今日新增订单数</div>
                        <div>$!totalOrderNum</div>
                    ##                        <span class="notification yellow">$34</span>
                    </a>
                </div>

                <div class="col-md-3 col-sm-3 col-xs-6">
                    <a data-toggle="tooltip" title="" class="well top-block" href="#">
                        <i class="glyphicon glyphicon-user blue"></i>

                        <div>今日新增客户数</div>
                        <div>$!totalCustomerNum</div>
##                        <span class="notification red">12</span>
                    </a>
                </div>
            </div>


            <!-- 信息列表 -->
            <div class="row">
                <!-- 库存警告 -->
                <div class="box col-md-6">
                    <div class="box-inner">
                        <div class="box-header well" data-original-title="">
                            <h2><i class="glyphicon glyphicon-list"></i> 库存警戒商品</h2>
                        </div>
                        <div class="box-content">
                            <ul class="dashboard-list">
                                #foreach ($stockGoods in $stockGoodsList)
                                    <li>
                                        <a href="#">
                                            <i class="glyphicon $!stockGoods.icon"></i>
                                            $!stockGoods.goodsName $!stockGoods.goodsModel<span class="float-right $!stockGoods.color">$!stockGoods.goodsNum</span>
                                        </a>
                                    </li>
                                #end
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- 今日热销商品 -->
                <div class="box col-md-6">
                    <div class="box-inner">
                        <div class="box-header well" data-original-title="">
                            <h2><i class="glyphicon glyphicon-list"></i> 今日热卖商品</h2>
                        </div>
                        <div class="box-content">
                            <ul class="dashboard-list">
                                #foreach ($orderGoods in $orderGoodsViewList)
                                    <li>
                                        <a href="#">
                                            <i class="glyphicon $!orderGoods.icon"></i>
                                            $!orderGoods.goodsName $!orderGoods.goodsModel<span class="float-right $!orderGoods.color">$!orderGoods.goodsNum</span>
                                        </a>
                                    </li>
                                #end
                            </ul>
                        </div>
                    </div>
                </div>
            </div>


            <!-- content ends -->
        </div>
        <!--/#content.col-md-0-->
    </div>
    <!--/fluid-row-->

    <hr>

    #parse("decoration/public/footer.vm")

</div>
<!--/.fluid-container-->

    #parse("decoration/public/commonJS.vm")
</body>
</html>
