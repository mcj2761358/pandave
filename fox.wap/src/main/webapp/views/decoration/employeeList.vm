    <link rel="stylesheet" href="${rc.contextPath}/resources/css/lib/simplePagination.css"/>
    <link rel="stylesheet" href="${rc.contextPath}/resources/css/view/decoration/employeeList.css?v=1.0"/>
    <script type="text/javascript" src="${rc.contextPath}/resources/js/lib/jquery.simplePagination.js"></script>
    <script type="text/javascript" src="${rc.contextPath}/resources/js/view/decoration/employeeList.js?v=1.6"></script>
</head>

<body>
    #parse("decoration/public/topBar.vm")
<div class="ch-container">
    <div class="row">

    ##引入左边菜单栏
        #parse("decoration/public/leftMenu.vm")

        <div id="content" class="col-lg-10 col-sm-10">
            <div>
                <ul class="breadcrumb">
                    <li>
                        <a href="#">员工中心</a>
                    </li>
                    <li>
                        <a href="#"> 员工管理</a>
                    </li>
                </ul>
            </div>

            <div class="row">
                <div class="box col-md-12">
                    <div class="box-inner">
                        <div class="box-header well order-header" data-original-title="">
                            <h2>
                                <i class="glyphicon glyphicon-user"></i> 员工列表
                            </h2>


                            <h2 class="modal-title float-right">
                                <a class="btn btn-success btn-sm" id="employeeModalBtn">
                                    <i class="glyphicon glyphicon-edit icon-white"></i>新建员工
                                </a>
                            </h2>
                        </div>

                        <div class="box-content">

                            <!-- 搜索框 -->
##                            <div class="form-horizontal">
##                                <div class="form-group col-md-12 has-success">
##                                    <div class="col-sm-9">
##                                        <input type="text" class="form-control" id="keyword" placeholder="商品名称/商品型号">
##                                    </div>
##                                    <button class="btn btn-success" onclick="queryEmployeeList(0);">
##                                        搜索员工
##                                    </button>
##                                </div>
##                            </div>

                            <table class="table table-striped table-bordered">
                                <thead>
                                <tr>
                                    <th>姓名</th>
                                    <th>手机号</th>
                                    <th>身份证</th>
                                    <th>性别</th>
                                    <th>地址</th>
                                    <th>生日</th>
                                    <th>功能</th>
                                </tr>
                                </thead>
                                <tbody class="contentDiv">
                                ##customer data from db
                                </tbody>
                            </table>

                            <div align="center">
                                <ul class="pagination self-page"></ul>
                            </div>
                        </div>
                    </div>
                </div>
                <!--/span-->

            </div>
        </div>
    </div>

    #parse("decoration/public/footer.vm")
</div>


<div class="modal fade" id="employeeModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    &times;
                </button>
                <h4 class="modal-title">
                    员工信息:
                </h4>
            </div>
            <div class="modal-body" style="color: #666666;">

                <div class="row">
                    <div class="form-horizontal">
                        <!-- 客户ID -->
                        <input type="hidden" id="editEmpId"/>

                        <div class="form-group col-md-12 has-success">
                            <label class="col-sm-3 control-label">员工姓名</label>

                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="editEmpName">
                            </div>
                            <label class="red control-label">*</label>
                        </div>
                        <div class="form-group col-md-12 has-success">
                            <label class="col-sm-3 control-label">手机号</label>

                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="editEmpMobile">
                            </div>
                            <label class="red control-label">*</label>
                        </div>

                            <div class="form-group col-md-12 has-success">
                                <label class="col-sm-3 control-label">身份证</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" id="editCardno">
                                </div>
                            </div>

                        <div class="form-group col-md-12 has-success">
                            <label class="col-sm-3 control-label">性别</label>

                            <div class="col-sm-8">
                                <select class="form-control" id="editSex">
                                    <option value="" selected="selected"></option>
                                    <option value="男">男</option>
                                    <option value="女">女</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group col-md-12 has-success">
                            <label class="col-sm-3 control-label">地址</label>

                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="editAddress">
                            </div>
                        </div>

                        <!-- 生日 -->
                        <div class="form-group col-md-12 has-success">
                            <label class="col-sm-3 control-label">生日</label>

                            <div class="col-sm-8">

                                <div class="input-group date birthTime" data-date-format="yyyy-mm-dd"
                                     data-link-field="dp">
                                    <input class="form-control" id="editBirthday" size="16" type="text" value="" readonly>
                                    <span class="input-group-addon"><span
                                            class="glyphicon glyphicon-remove"></span></span>
                                    <span class="input-group-addon"><span class="glyphicon glyphicon-th"></span></span>
                                </div>

                            </div>
                        </div>

                        <div align="center">
                            <button type="button" class="btn btn-danger btn-sm" id="saveEmployeeBtn"> 保存员工</button>
                            <button type="button" class="btn btn-default btn-sm" data-dismiss="modal"> 取 消</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




    #parse("decoration/public/alertModal.vm")
    #parse("decoration/public/commonJS.vm")
</body>
