<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace = "com.minutch.fox.dao.decoration.CustomerDao">

    <resultMap id = "BaseResultMap" type = "com.minutch.fox.entity.decoration.Customer"
               extends = "COMMON.BASE_RESULT_MAP">
        <result column = "cus_name" property = "cusName" />
        <result column = "mobile_phone" property = "mobilePhone" />
        <result column = "house_name" property = "houseName" />
        <result column = "address" property = "address" />
        <result column = "remark" property = "remark" />
    </resultMap>

    <sql id = "BaseWhereClause">
        <where>
            <trim prefixOverrides = "and">
                <include refid = "COMMON.BASE_WHERE_CLAUSE" />
                <if test = "cusName != null">
                    and cus_name = #{cusName}
                </if>
                <if test = "mobilePhone != null">
                    and mobile_phone = #{mobilePhone}
                </if>
                <if test = "houseName != null">
                    and house_name = #{houseName}
                </if>
                <if test = "address != null">
                    and address = #{address}
                </if>
                <if test = "remark != null">
                    and remark = #{remark}
                </if>
            </trim>
        </where>
    </sql>

    <sql id = "BaseUpdateSet">
        <set>
            <include refid = "COMMON.BASE_UPDATE_SET" />
            <if test = "cusName != null">
                cus_name = #{cusName},
            </if>
            <if test = "mobilePhone != null">
                mobile_phone = #{mobilePhone},
            </if>
            <if test = "houseName != null">
                house_name = #{houseName},
            </if>
            <if test = "address != null">
                address = #{address},
            </if>
            <if test = "remark != null">
                remark = #{remark}
            </if>
        </set>
    </sql>

    <!-- 查询总数 -->
    <select id = "selectCount" resultType = "java.lang.Integer">
        select count(id)
        from decoration_customer
        <include refid = "BaseWhereClause" />
    </select>

    <!-- 查询 -->
    <select id = "select" resultMap = "BaseResultMap">
        select
        <include refid = "COMMON.ALL_COLUMN_LIST" />
        from decoration_customer
        <include refid = "BaseWhereClause" />
        <include refid = "COMMON.ORDER_BY" />
        <include refid = "COMMON.LIMIT" />
    </select>

    <!-- 根据ID查询 -->
    <select id = "selectById" resultMap = "BaseResultMap">
        select
        <include refid = "COMMON.ALL_COLUMN_LIST" />
        from decoration_customer
        where id = #{id}
    </select>

    <!-- 根据IDS批量删除 -->
    <update id = "deleteByIds">
        update decoration_customer
        set is_deleted='Y'
        where id in
        (
        <foreach collection = "array" index = "index" item = "tag" separator = ",">
            #{tag}
        </foreach>
        )
    </update>

    <!-- 根据ID删除 -->
    <update id = "deleteById">
        update decoration_customer
        set is_deleted='Y'
        where id=#{id}
    </update>

    <!-- 删除 -->
    <delete id = "delete">
        update decoration_customer
        set is_deleted='Y'
        <include refid = "BaseWhereClause" />
    </delete>

    <!-- 添加   -->
    <insert id = "insert" useGeneratedKeys = "true" keyProperty = "id">
        insert into decoration_customer (
        <include refid = "COMMON.BASE_INSERT_COLUMN" />
        cus_name,
        mobile_phone,
        house_name,
        address,
        remark
        )
        values (
        <include refid = "COMMON.BASE_INSERT_VALUE" />
        #{cusName},
        #{mobilePhone},
        #{houseName},
        #{address},
        #{remark}
        )
    </insert>

    <!-- 通过ID更新 -->
    <update id = "updateById">
        update decoration_customer
        <include refid = "BaseUpdateSet" />
        where id = #{id}
    </update>


    <!-- 根据条件查询客户总数 -->
    <select id="queryCustomerCount" resultType="java.lang.Integer">
        select count(*)
        from decoration_customer
        where is_deleted = 'N'
        <if test="param.keyword!=null and param.keyword!=''">
            and
            (
            cus_name  like concat('%',#{param.keyword},'%')
            or mobile_phone like concat('%',#{param.keyword},'%')
            or house_name like concat('%',#{param.keyword},'%')
            )
        </if>
    </select>

    <!-- 根据条件查询学员数据 -->
    <select id="queryCustomer" resultMap="BaseResultMap">
        select *
        from decoration_customer
        where is_deleted = 'N'
        <if test="param.keyword!=null and param.keyword!=''">
            and
            (
            cus_name  like concat('%',#{param.keyword},'%')
            or mobile_phone like concat('%',#{param.keyword},'%')
            or house_name like concat('%',#{param.keyword},'%')
            )
        </if>
        order by id desc
        limit #{start},#{limit}
    </select>
</mapper>
