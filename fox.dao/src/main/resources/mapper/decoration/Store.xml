<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace = "com.minutch.fox.dao.decoration.StoreDao">

    <resultMap id = "BaseResultMap" type = "com.minutch.fox.entity.decoration.Store"
               extends = "COMMON.BASE_RESULT_MAP">
        <result column = "store_name" property = "storeName" />
        <result column = "cardno" property = "cardno" />
        <result column = "mobile_phone" property = "mobilePhone" />
        <result column = "password" property = "password" />
        <result column = "end_time" property = "endTime" />
        <result column = "remark" property = "remark" />
    </resultMap>

    <sql id = "BaseWhereClause">
        <where>
            <trim prefixOverrides = "and">
                <include refid = "COMMON.BASE_WHERE_CLAUSE" />
                <if test = "storeName != null">
                    and store_name = #{storeName}
                </if>
                <if test = "cardno != null">
                    and cardno = #{cardno}
                </if>
                <if test = "mobilePhone != null">
                    and mobile_phone = #{mobilePhone}
                </if>
                <if test = "password != null">
                    and password = #{password}
                </if>
                <if test = "endTime != null">
                    and end_time = #{endTime}
                </if>
                <if test = "remark != null">
                    and remark = #{remark}
                </if>
            </trim>
        </where>
    </sql>

    <sql id = "BaseUpdateSet">
        <set>
            <include refid = "COMMON.BASE_UPDATE_SET" />
            <if test = "storeName != null">
                store_name = #{storeName},
            </if>
            <if test = "cardno != null">
                cardno = #{cardno},
            </if>
            <if test = "mobilePhone != null">
                mobile_phone = #{mobilePhone},
            </if>
            <if test = "password != null">
                password = #{password},
            </if>
            <if test = "endTime != null">
                end_time = #{endTime},
            </if>
            <if test = "remark != null">
                remark = #{remark}
            </if>
        </set>
    </sql>

    <!-- 查询总数 -->
    <select id = "selectCount" resultType = "java.lang.Integer">
        select count(id)
        from decoration_store
        <include refid = "BaseWhereClause" />
    </select>

    <!-- 查询 -->
    <select id = "select" resultMap = "BaseResultMap">
        select
        <include refid = "COMMON.ALL_COLUMN_LIST" />
        from decoration_store
        <include refid = "BaseWhereClause" />
        <include refid = "COMMON.ORDER_BY" />
        <include refid = "COMMON.LIMIT" />
    </select>

    <!-- 根据ID查询 -->
    <select id = "selectById" resultMap = "BaseResultMap">
        select
        <include refid = "COMMON.ALL_COLUMN_LIST" />
        from decoration_store
        where id = #{id}
    </select>

    <!-- 根据IDS批量删除 -->
    <update id = "deleteByIds">
        update decoration_store
        set is_deleted='Y'
        where id in
        (
        <foreach collection = "array" index = "index" item = "tag" separator = ",">
            #{tag}
        </foreach>
        )
    </update>

    <!-- 根据ID删除 -->
    <update id = "deleteById">
        update decoration_store
        set is_deleted='Y'
        where id=#{id}
    </update>

    <!-- 删除 -->
    <delete id = "delete">
        update decoration_store
        set is_deleted='Y'
        <include refid = "BaseWhereClause" />
    </delete>

    <!-- 添加   -->
    <insert id = "insert" useGeneratedKeys = "true" keyProperty = "id">
        insert into decoration_store (
        <include refid = "COMMON.BASE_INSERT_COLUMN" />
        store_name,
        cardno,
        mobile_phone,
        password,
        end_time,
        remark
        )
        values (
        <include refid = "COMMON.BASE_INSERT_VALUE" />
        #{storeName},
        #{cardno},
        #{mobilePhone},
        #{password},
        #{endTime},
        #{remark}
        )
    </insert>

    <!-- 通过ID更新 -->
    <update id = "updateById">
        update decoration_store
        <include refid = "BaseUpdateSet" />
        where id = #{id}
    </update>


    <!-- 根据手机号查询 -->
    <select id = "queryByMobilePhone" resultMap = "BaseResultMap">
        select *
        from decoration_store
        where is_deleted = 'N'
        and mobile_phone = #{mobilePhone}
        limit 1
    </select>

    <!-- 修改手机号码 -->
    <update id = "updatePassword">
        update decoration_store
        set password=#{password},
        gmt_modified = now()
        where id = #{id}
    </update>

</mapper>
