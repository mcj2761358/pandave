<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace = "com.minutch.fox.dao.decoration.FeedbackDao">

    <resultMap id = "BaseResultMap" type = "com.minutch.fox.entity.decoration.Feedback"
               extends = "COMMON.BASE_RESULT_MAP">
        <result column = "feed_type" property = "feedType" />
        <result column = "feed_message" property = "feedMessage" />
        <result column = "receive_message" property = "receiveMessage" />
        <result column = "remark" property = "remark" />
    </resultMap>

    <sql id = "BaseWhereClause">
        <where>
            <trim prefixOverrides = "and">
                <include refid = "COMMON.BASE_WHERE_CLAUSE" />
                <if test = "feedType != null">
                    and feed_type = #{feedType}
                </if>
                <if test = "feedMessage != null">
                    and feed_message = #{feedMessage}
                </if>
                <if test = "receiveMessage != null">
                    and receive_message = #{receiveMessage}
                </if>
                <if test = "remark != null">
                    and remark = #{remark}
                </if>
            </trim>
        </where>
    </sql>

    <sql id = "BaseUpdateSet">
        <set>
            <include refid = "COMMON.BASE_UPDATE_SET" />
            <if test = "feedType != null">
                feed_type = #{feedType},
            </if>
            <if test = "feedMessage != null">
                feed_message = #{feedMessage},
            </if>
            <if test = "receiveMessage != null">
                receive_message = #{receiveMessage},
            </if>
            <if test = "remark != null">
                remark = #{remark}
            </if>
        </set>
    </sql>

    <!-- 查询总数 -->
    <select id = "selectCount" resultType = "java.lang.Integer">
        select count(id)
        from decoration_feedback
        <include refid = "BaseWhereClause" />
    </select>

    <!-- 查询 -->
    <select id = "select" resultMap = "BaseResultMap">
        select
        <include refid = "COMMON.ALL_COLUMN_LIST" />
        from decoration_feedback
        <include refid = "BaseWhereClause" />
        <include refid = "COMMON.ORDER_BY" />
        <include refid = "COMMON.LIMIT" />
    </select>

    <!-- 根据ID查询 -->
    <select id = "selectById" resultMap = "BaseResultMap">
        select
        <include refid = "COMMON.ALL_COLUMN_LIST" />
        from decoration_feedback
        where id = #{id}
    </select>

    <!-- 根据IDS批量删除 -->
    <update id = "deleteByIds">
        update decoration_feedback
        set is_deleted='Y'
        where id in
        (
        <foreach collection = "array" index = "index" item = "tag" separator = ",">
            #{tag}
        </foreach>
        )
    </update>

    <!-- 根据ID删除 -->
    <update id = "deleteById">
        update decoration_feedback
        set is_deleted='Y'
        where id=#{id}
    </update>

    <!-- 删除 -->
    <delete id = "delete">
        update decoration_feedback
        set is_deleted='Y'
        <include refid = "BaseWhereClause" />
    </delete>

    <!-- 添加   -->
    <insert id = "insert" useGeneratedKeys = "true" keyProperty = "id">
        insert into decoration_feedback (
        <include refid = "COMMON.BASE_INSERT_COLUMN" />
        feed_type,
        feed_message,
        receive_message,
        remark
        )
        values (
        <include refid = "COMMON.BASE_INSERT_VALUE" />
        #{feedType},
        #{feedMessage},
        #{receiveMessage},
        #{remark}
        )
    </insert>

    <!-- 通过ID更新 -->
    <update id = "updateById">
        update decoration_feedback
        <include refid = "BaseUpdateSet" />
        where id = #{id}
    </update>

</mapper>
